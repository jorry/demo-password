<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
      android:background="@drawable/whisper_rear_cell_background"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:text="输入安全码" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1" android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="0dip" >

            <com.example.numberkey.KeyImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content" 
                android:layout_marginRight="5dip"
                android:layout_height="wrap_content"
                android:src="@drawable/w_inbox_image" />

            <com.example.numberkey.KeyImageView
                android:id="@+id/imageView2"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/w_inbox_image" />

            <com.example.numberkey.KeyImageView
                android:id="@+id/imageView3" 
                 android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/w_inbox_image" />
            <com.example.numberkey.KeyImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"   
                android:layout_marginLeft="5dip"
                android:src="@drawable/w_inbox_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"   android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/keypad_1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/keypad_2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:background="@drawable/keypad_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:background="@drawable/keypad_4" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:background="@drawable/keypad_5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/keypad_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button7" android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/keypad_7" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/keypad_8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/keypad_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/keypad_delete" />

            <Button
                android:id="@+id/button0" android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/keypad_0" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="wrap_content" android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/keypad_delete" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>